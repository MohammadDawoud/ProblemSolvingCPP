#include <iostream>
#include <stack>
#include <vector>

using namespace std;

class StockSpanner {
public:
	stack<pair<int,int>> st; // first represent the span number and second the price
	static int numberOfDays = 0 ;
    StockSpanner() {

    }

    int next(int price) {

    	numberOfDays++;

    	while(st.empty() == false) {
    		pair<int,int> last = st.top();
    		if(price >  last.second) {
    			st.pop();
    		}
    		else {
    			int span = numberOfDays-last.first;
    			st.push(make_pair(span, price));
    			break;
    		}
    	}

    	// edge case when the stack is empty
		if(st.empty() == false) {
			int span = numberOfDays;
			st.push(make_pair(span, price));
		}
    }
};


int main() {
	cout << "" << endl; // prints 
	return 0;
}
