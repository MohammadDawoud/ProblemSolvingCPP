#include <iostream>
#include <stack>
using namespace std;


void reverseStack(stack<int> & st) {

	if(st.empty())
		return;

	int top = st.top();
	st.pop();
	reverseStack(st);
	st.push(top);
}

int main() {
	stack <int> st ;

	for(int i=0; i< 5; i++) {
		st.push(i);
	}

	reverseStack(st);

	for(int i=0; i< 5; i++) {
		cout<< st.top() << ", ";
		st.pop();
	}

	return 0;
}
