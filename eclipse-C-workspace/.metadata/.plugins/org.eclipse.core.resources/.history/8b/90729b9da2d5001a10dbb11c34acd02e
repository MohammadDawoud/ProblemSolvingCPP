#include <iostream>
#include <stack>
#include <vector>

using namespace std;

class StockSpanner {
public:
	stack<pair<int,int>> *st; // first represent the span number and second the price
	inline static int numberOfDays  ;
    StockSpanner() {
    	st = new stack <pair<int,int>> ();
    }

    int next(int price) {

    	numberOfDays++;
    	int span=0;
    	while(*st.empty() == false) {
    		pair<int,int> last = *st.top();
    		if(price >  last.second) {
    			*st.pop();
    		}
    		else {
    			span = numberOfDays-last.first;
    			*st.push(make_pair(span, price));
    			break;
    		}
    	}

    	// edge case when the stack is empty
		if(st.empty() == false) {
			span = numberOfDays;
			st.push(make_pair(span, price));
		}

		return span;
    }
};


int main() {
	cout << "" << endl; // prints 
	return 0;
}
